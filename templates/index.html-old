<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        #chat-container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            height: 90vh;
        }
        #chat-history {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }
        #input-area {
            display: flex;
            padding: 10px;
            border-top: 1px solid #ddd;
        }
        #user-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        #send-button {
            padding: 10px 20px;
            margin-left: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .message {
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 10px;
            max-width: 80%;
        }
        .user {
            background-color: #007bff;
            color: #fff;
            align-self: flex-start;
        }
        .ai {
            background-color: #e0e0e0;
            align-self: flex-end;
        }
        .ai img {
            max-width: 100px;
            height: auto;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-history"></div>
        <div id="input-area">
            <input type="text" id="user-input" placeholder="Type your message...">
            <button id="send-button">Send</button>
        </div>
    </div>
    <script src="[invalid url, do not cite]
    <script>
        const socket = io();
        const chatHistory = document.getElementById('chat-history');
        const userInput = document.getElementById('user-input');
        const sendButton = document.getElementById('send-button');

        sendButton.addEventListener('click', () => {
            const message = userInput.value.trim();
            if (message) {
                addMessage('user', message);
                socket.emit('send_message', {content: message});
                userInput.value = '';
            }
        });

        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendButton.click();
            }
        });

        socket.on('new_message', (data) => {
            addMessage(data.type, data.content, data.image_url);
        });

        function addMessage(type, content, imageUrl = null) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            if (type === 'user') {
                messageDiv.innerHTML = `<p>${content}</p >`;
            } else if (type === 'ai') {
                messageDiv.innerHTML = `<p>${content}</p >${imageUrl ? `< img src="${imageUrl}" alt="AI emotion">` : ''}`;
            }
            chatHistory.appendChild(messageDiv);
            chatHistory.scrollTop = chatHistory.scrollHeight;
        }
    </script>
</body>
</html>
